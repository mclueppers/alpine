#!/bin/sh

# Script for building and packaging
# Usage package [5.6|7.0|7.1|7.2|all|{package-name}]

BUILD_PACKAGES="${1:-all}"

packages_others="
argon2
composer
gnu-libiconv
libmemcached-elasticache
litespeed
phpunit
pickle
"

packages_56="
php5.6-apcu
php5.6-composer
php5.6-imagick
php5.6-memcached
php5.6-memcached-elasticache
php5.6-meminfo
php5.6-mongodb
php5.6-newrelic-php_agent
php5.6-phpunit
php5.6-pickle
php5.6-redis
php5.6-sodium
php5.6-swoole
php5.6-xdebug
php5.6-yaml
"

packages_70="
php7.0-apcu
php7.0-composer
php7.0-imagick
php7.0-memcached
php7.0-memcached-elasticache
php7.0-meminfo
php7.0-mongodb
php7.0-newrelic-php_agent
php7.0-pickle
php7.0-redis
php7.0-sodium
php7.0-swoole
php7.0-xdebug
php7.0-yaml
"

packages_71="
php7.1-apcu
php7.1-composer
php7.1-imagick
php7.1-memcached
php7.1-memcached-elasticache
php7.1-meminfo
php7.1-mongodb
php7.1-newrelic-php_agent
php7.1-phpunit
php7.1-pickle
php7.1-redis
php7.1-sodium
php7.1-swoole
php7.1-xdebug
php7.1-yaml
"

packages_72="
php7.2-apcu
php7.2-composer
php7.2-imagick
php7.2-mcrypt
php7.2-memcached
php7.2-memcached-elasticache
php7.2-meminfo
php7.2-mongodb
php7.2-newrelic-php_agent
php7.2-phpunit
php7.2-pickle
php7.2-redis
php7.2-swoole
php7.2-xdebug
php7.2-yaml
"

# To build PHP Pecl extensions and some packages, we'll need some deps from the
# local PHP.earth Alpine repository
mkdir -p /public/v3.7/x86_64
abuild-sign -k /build/dobrevit.rsa.priv /public/v3.7/x86_64/APKINDEX.tar.gz
sudo apk update

if [ "$BUILD_PACKAGES" = "5.6" ]; then
  packages=$packages_56
elif [ "$BUILD_PACKAGES" = "7.0" ]; then
  packages=$packages_70
elif [ "$BUILD_PACKAGES" = "7.1" ]; then
  packages=$packages_71
elif [ "$BUILD_PACKAGES" = "7.2" ]; then
  packages=$packages_72
elif [ "$BUILD_PACKAGES" = "other" ]; then
  packages=$packages_others
elif [ "$BUILD_PACKAGES" = "php_all" ]; then
  packages="php5.6 $packages_56 php7.0 $packages_70 php7.1 $packages_71 php7.2 $packages_72"
elif [ "$BUILD_PACKAGES" = "all" ]; then
  packages="$packages_56 $packages_70 $packages_71 $packages_72"
else
  packages="$BUILD_PACKAGES"
fi

for package in $packages; do
  cd /build/v3.7/$package
  rm -rf src pkg tmp

  abuild checksum
  abuild -r -K
  abuild undeps

  # Generate index with trusted signature
  generate-index v3.7
done
